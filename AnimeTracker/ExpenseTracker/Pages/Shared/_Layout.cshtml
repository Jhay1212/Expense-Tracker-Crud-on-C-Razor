<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpenseTracker.styles.css" asp-append-version="true" />
</head>
<body>
    
<nav class="navbar navbar-expand-lg bg-dark shadow-sm py-3 mb-5">
  <div class="container">
    <a class="navbar-brand mx-auto text-white fw-bold fs-2 tracking-wide" asp-page="/Index" 
       style="letter-spacing: 2px; ">
       <div class="w-100 d-flex justify-content-between align-items-center">

        <i class="bi bi-wallet2 me-2"></i> ExpenseTracker
        <a asp-page="/user/Logout">Logout</a>
       </div>
    </a>
  </div>
</nav>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>
</html>
